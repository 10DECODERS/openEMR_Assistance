{
  "manifest_version": 3,
  "name": "EMR Copilot",
  "version": "2.0",
  "description": "AI-powered clinical assistant for OpenEMR with SOAP note generation and code extraction",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "sidePanel"
  ],
  "optional_permissions": [
    "downloads"
  ],
  "host_permissions": [
    "*://localhost/*",
    "*://127.0.0.1/*",
    "http://*/*",
    "https://*/*",
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html",
        "sidepanel.css",
        "assistant.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}